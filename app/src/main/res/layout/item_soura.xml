<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/whiteChange"
    android:layoutDirection="rtl">
    <LinearLayout
        android:id="@+id/layoutChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_20sdp"
        android:background="?selectableItemBackground">
        <TextView
            android:id="@+id/souraName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="@color/blackChange" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/numberOfPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberOfAya"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/numberOfAyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_3sdp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/lockSoura"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/lock"
        android:scaleType="centerCrop"
        android:layout_gravity="end"
        android:contentDescription="@string/lock"/>

</androidx.cardview.widget.CardView>